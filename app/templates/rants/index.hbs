<main id="scroll">
  <section class="rants-index">

  {{#each 'rant' in model}}
    <article class="rant-item">
      <header class="rant-header">
        <div class="rant-header-title">
            <h3>{{rant.title}}</h3>
        </div>

        <div class="rant-header-actions">
          {{#if session.isAuthenticated}}
            {{#is-owner param1=rant.user.id param2=session.user_id}}
              <button class="button button-primary"><i class="fa fa-pencil-square-o">Edit</i></button>
            {{/is-owner}}
          {{/if}}
        </div>
      </header>

      <aside class="rant-secondary">
        <div class="author"><div style="background-image: url(http://www.gravatar.com/avatar/undefined?s=200)" class="author-photo"></div>
        <h5></h5>
        <h6></h6>
      </div>
    </aside>

    <section class="rant-item-content">
      {{rant.body}}
    </section>

  </article>

  {{/each}}
  </section>


</main>
